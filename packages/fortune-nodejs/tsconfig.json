{
  "extends": "@beesley/tsconfig/lambda.json",
  "compilerOptions": {
    "types": ["node"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["src/*.test.*", "src/**/*.test.*", "src/test/*.ts"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
