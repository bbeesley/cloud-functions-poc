{
  "name": "fortune-nodejs",
  "version": "1.0.0",
  "private": true,
  "description": "The fortune cookie API",
  "author": "Bill Beesley <bill.beesley@soundcloud.com>",
  "homepage": "https://github.com/bbeesley/cloud-functions-poc#readme",
  "license": "UNLICENSED",
  "main": "dist/api.js",
  "engines": {
    "node": ">=18.13.0"
  },
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbeesley/cloud-functions-poc.git"
  },
  "scripts": {
    "test": "xo # && ava",
    "clean": "rimraf dist",
    "precompile": "npm run clean",
    "compile": "tsc",
    "start": "node --import ./dist/telemetry.js dist/handler.js",
    "start:dev": "npx nodemon ./src/handler.ts"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/bbeesley/cloud-functions-poc/issues"
  },
  "devDependencies": {
    "@beesley/tsconfig": "^1.1.4",
    "@types/express": "^4.17.15",
    "ava": "^5.1.1",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "xo": "^0.53.1"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "n/prefer-global/process": "off",
      "func-names": [
        "error",
        "always"
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "allowList": {
            "res": true
          }
        }
      ]
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "rules": {
          "@typescript-eslint/naming-convention": [
            "error",
            {
              "selector": "default",
              "format": [
                "camelCase"
              ]
            },
            {
              "selector": "variable",
              "format": [
                "camelCase",
                "UPPER_CASE",
                "PascalCase"
              ]
            },
            {
              "selector": "parameter",
              "format": [
                "camelCase",
                "PascalCase"
              ]
            },
            {
              "selector": "typeLike",
              "format": [
                "PascalCase"
              ]
            },
            {
              "selector": "classProperty",
              "format": [
                "camelCase"
              ]
            },
            {
              "selector": "objectLiteralProperty",
              "format": null
            },
            {
              "selector": "typeProperty",
              "format": null
            },
            {
              "selector": "enum",
              "format": [
                "PascalCase",
                "UPPER_CASE"
              ]
            },
            {
              "selector": "enumMember",
              "format": null
            }
          ]
        }
      },
      {
        "files": "**/*.test.ts",
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "@typescript-eslint/naming-convention": "off"
        }
      }
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^5.3.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^1.2.0",
    "@opentelemetry/api": "^1.4.0",
    "@opentelemetry/auto-instrumentations-node": "^0.36.0",
    "@opentelemetry/sdk-node": "^0.35.0",
    "express": "^5.0.0-beta.1",
    "winston": "^3.8.2"
  }
}
