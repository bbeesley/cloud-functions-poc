{
  "name": "fortune-nodejs",
  "version": "1.0.0",
  "private": true,
  "description": "The fortune cookie API",
  "author": "Bill Beesley <bill.beesley@soundcloud.com>",
  "homepage": "https://github.com/bbeesley/cloud-functions-poc#readme",
  "license": "UNLICENSED",
  "main": "dist/api.js",
  "engines": {
    "node": ">=18.13.0"
  },
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbeesley/cloud-functions-poc.git"
  },
  "scripts": {
    "test": "xo # && ava",
    "clean": "rimraf dist",
    "precompile": "npm run clean",
    "compile": "tsc",
    "start": "node dist/handler.js",
    "start:dev": "npx nodemon ./src/handler.ts"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/bbeesley/cloud-functions-poc/issues"
  },
  "devDependencies": {
    "@beesley/tsconfig": "^1.1.4",
    "ava": "^5.1.1",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "xo": "^0.53.1"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "n/prefer-global/process": "off",
      "func-names": [
        "error",
        "always"
      ]
    }
  },
  "dependencies": {
    "@hapi/hapi": "^21.2.0",
    "hapi-pino": "^11.0.1",
    "joi": "^17.7.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
